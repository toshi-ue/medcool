{
  // "_refsection": [
  //   "https://tech.smartshopping.co.jp/composition-api",
  //   "https://mseeeen.msen.jp/current-nuxt-type-script-at-minimum/",
  //   "https://zenn.dev/koduki/articles/430ba33bb8b8f6",
  //   "https://typescript.nuxtjs.org/ja",
  //   "https://typed-vuex.roe.dev/",
  //   "https://www.typescriptlang.org/docs/handbook/compiler-options.html",
  //   "https://vuejs.github.io/vetur/guide/setup.html#extensions",
  //   "https://vuejs.github.io/vetur/guide/setup.html#vs-code-config",
  //   "TODO: noImplicitAny, noImplicitThis, noImplicitReturns の設定を見直す"
  // ],
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "components/*": [
        "src/components/*"
      ]
    },
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "types": [
      "@nuxtjs/axios",
      "@nuxt/types",
      "@nuxtjs/vuetify",
      // https://zenn.dev/fuqda/articles/a4d0bd213bf868
      "@types/jest",
      "@types/node"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "coverage",
    "dist"
  ]
}
